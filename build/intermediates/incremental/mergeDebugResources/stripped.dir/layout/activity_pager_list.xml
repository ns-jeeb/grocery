<?xml version="1.0" encoding="utf-8"?>
        

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager_container"
        android:orientation="vertical"
        tools:context="com.jeeb.grocerymanager.activities.PagerListActivity" android:tag="layout/activity_pager_list_0">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager_list"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create Grocery list"
            android:id="@+id/btn_create_grocery_list"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
         